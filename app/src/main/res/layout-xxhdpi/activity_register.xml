<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/icon_logo">

        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/logo_icon"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginBottom="-10dp"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi Welcome back again!"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="23dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="15dp">

                </TextView>

                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_1"
                    android:text="Please complete the form to continue app"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp">

                </TextView>

                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_2"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/register_username"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/text_username"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:id="@+id/username_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#8FFFFFFF"
                        android:padding="10dp"
                        android:hint="Enter your username">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/email_register_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_username"
                    android:text="Email Address"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/register_address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/email_register_text"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:id="@+id/email_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#8FFFFFFF"
                        android:padding="10dp"
                        android:hint="Enter your email address">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/password_register_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_address"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/password_register_text"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:id="@+id/password_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#8FFFFFFF"
                        android:hint="Enter your password"
                        android:padding="10dp"
                        android:inputType="textPassword">

                    </EditText>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/re_password_register_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/register_password"
                    android:text="Re-Password"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/register_re_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/re_password_register_text"
                    app:cardCornerRadius="3dp">

                    <EditText
                        android:id="@+id/re_password_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#8FFFFFFF"
                        android:hint="Enter your re-password"
                        android:padding="10dp"
                        android:inputType="textPassword">

                    </EditText>

                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Sign Up"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/register_re_password">

                </Button>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_register"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Have account already?"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/btn_login_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:textColor="#FF5722"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15dp"
                        android:layout_toRightOf="@id/text_3">

                    </TextView>

                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/header_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:id="@+id/view_myHistory"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/view_myCart"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/history_icon_day">

                    </ImageView>

                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_myCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cart_icon_day">

                </ImageView>

            </RelativeLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/search_cardview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/header_function"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Search Ecoprint Product"
                        android:fontFamily="sans-serif-medium"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:paddingLeft="10dp">

                    </EditText>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_header"
            android:layout_above="@id/bottom">

            <TextView
                android:id="@+id/recommended_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:text="Media in Ecoprint"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black">
            </TextView>

            <RelativeLayout
                android:id="@+id/categories_best_sale"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/recommended_text_1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/promo_cardview_1"
                    android:layout_width="330px"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@id/promo_cardview_2"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#ECECEC"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/promo_cardview_1_image"
                            android:layout_width="300px"
                            android:layout_height="360px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/wool_wallpaper">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/promo_cardview_1_image"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15px"
                            android:fontFamily="sans-serif-medium"
                            android:text="KAIN"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/promo_cardview_2"
                    android:layout_width="330px"
                    android:layout_height="190dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:backgroundTint="#ECECEC"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/promo_cardview_2_image"
                            android:layout_width="300px"
                            android:layout_height="390px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/clothes_wallpaper">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/promo_cardview_2_image"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15px"
                            android:fontFamily="sans-serif-medium"
                            android:text="BAJU"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/promo_cardview_3"
                    android:layout_width="330px"
                    android:layout_height="190dp"
                    android:layout_margin="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/promo_cardview_2"
                    android:backgroundTint="#ECECEC"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/promo_cardview_3_image"
                            android:layout_width="300px"
                            android:layout_height="360px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bag_wallpaper">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/promo_cardview_3_image"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15px"
                            android:fontFamily="sans-serif-medium"
                            android:text="TAS"
                            android:textColor="@color/black"
                            android:textSize="15dp">

                        </TextView>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/recommended_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/categories_best_sale"
                android:text="Category"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black">
            </TextView>

            <RelativeLayout
                android:id="@+id/categories_by_products"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/recommended_text_2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/categories_products_cardview_1"
                    android:layout_width="330px"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/categories_products_cardview_2"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#ECECEC"
                    app:cardCornerRadius="10dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/categories_products_cardview_2"
                    android:layout_width="330px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:backgroundTint="#ECECEC"
                    app:cardCornerRadius="10dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/categories_products_cardview_3"
                    android:layout_width="330px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/categories_products_cardview_2"
                    android:backgroundTint="#ECECEC"
                    app:cardCornerRadius="10dp">

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/recommended_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/categories_by_products"
                android:text="HOTS in Eco Fashion World!"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black">
            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/slide_show"
                android:layout_width="1030px"
                android:layout_height="580px"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/recommended_text_3"
                app:cardCornerRadius="9dp">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:flipInterval="2000"
                        android:autoStart="true"
                        android:inAnimation="@android:anim/slide_in_left"
                        android:outAnimation="@android:anim/slide_out_right">

                        <ImageView
                            android:id="@+id/slide_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/promote_1">

                        </ImageView>

                        <ImageView
                            android:id="@+id/slide_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo">

                        </ImageView>

                    </ViewFlipper>
                    
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="-10dp"
                android:backgroundTint="#ECECEC"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/home_bottom_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="45dp">

                        <ImageView
                            android:id="@+id/home_image_1"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginTop="5dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/main_home">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/home_image_1"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="3dp"
                            android:textSize="11dp"
                            android:text="Home"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/menu_bottom_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/menu_bottom_cardview"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginTop="3dp"
                            app:cardCornerRadius="30dp"
                            android:backgroundTint="#454545">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/more_icon"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginRight="7dp"
                                    android:layout_marginBottom="7dp">

                                </ImageView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="3dp"
                            android:layout_below="@id/menu_bottom_cardview"
                            android:textSize="11dp"
                            android:text="Menu"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profile_bottom_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/status_profile"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:id="@+id/photo_firebase"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/user_profile">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/status_profile"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="1dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="User Profile"
                            android:textColor="@color/black"
                            android:textSize="11dp">

                        </TextView>


                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
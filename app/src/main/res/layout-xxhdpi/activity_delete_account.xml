<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/bill_header"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/btn_return_bill"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24">

            </ImageView>

            <TextView
                android:id="@+id/history_name_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_return_bill"
                android:text="Delete Account"
                android:textSize="16dp"
                android:fontFamily="@font/interdisplaymedium"
                android:textColor="@color/black">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/body_bill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bill_header">

            <TextView
                android:id="@+id/title_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please read the instruction!"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/interextrabold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp">

            </TextView>

            <TextView
                android:id="@+id/sub_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Before you delete your data, please consider the following:"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/interregular"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/title_delete">

            </TextView>

            <TextView
                android:id="@+id/sub_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Your Transaction Details, Search History and Account will be deleted from the system"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/interregular"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/sub_delete">

            </TextView>

            <TextView
                android:id="@+id/sub_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. The Deletion is Permanent, meaning you cannot request data transfer after your account is deleted"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/interregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/sub_desc_1">

            </TextView>

            <TextView
                android:id="@+id/sub_desc_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is advised to request data transfer first before you delete your account in-order to save your personal data"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/interregular"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_above="@id/btn_delete_account">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_delete_account"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="#C63333"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Account"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/intermedium">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>